<div class="py-4">
    <h2>Solicitud de Hora Imagenologia</h2>
    <hr class="w-50" />

<div class="py-4">
  <h2>Pedir Hora</h2>
  <hr class="w-50" />
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Fecha</th>
        <th scope="col">Activa</th>
        <th scope="col">Tomar Hora</th>
      </tr>
    </thead>
    <tbody>
      {{#each horas}}
      <form method="post" action="/pedir-examen" enctype="multipart/form-data">
        <tr>
          <td class="mb-3"><input name="id_hora" type="text"></td>
          <td>{{this.id}}</td>
          <td><input type="text">{{this.fecha}}</td>
          <td><input type="checkbox" name="activa" value=""{{#if this.activa}}checked{{/if}}>{{this.activa}}</td> 
        </tr>  
        {{/each}}         
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-12">
            <label for="orden_medica">Orden Medica</label>
            <input type="file" name="orden_medica" id="foto" />
            <button name="action" value="tomarHora">Tomar Hora</button>  
          </div>
        </div>
       </form> 
    </tbody>
  </table>
</div>