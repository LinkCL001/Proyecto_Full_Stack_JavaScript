<div class="py-4">
    <h2>Solicitud de Hora Imagenologia</h2>
    <hr class="w-50" />

<div class="py-4">
  <h2>Pedir Hora</h2>
  <hr class="w-50" />
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Fecha</th>
        <th scope="col">Activa</th>
        <th scope="col">Tomar Hora</th>
      </tr>
    </thead>
    <tbody>
      {{#each horas}}
      <form method="post" action="/pedir-hora" enctype="multipart/form-data">
        <tr>
          <td><input type="datetime" name="fecha1" value="{{this.fecha}}"></td>   
          <td><input type="checkbox" name="activa" value="{{this.activa}}"{{#if this.activa}}checked{{/if}}></td> 
          <td><select name="fecha" id="fecha"><option value="{{this.fecha}}"></option></select> </td>  
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-12">
            <label for="orden_medica">Orden Medica</label>
            <input type="file" name="orden_medica" id="orden_medica" />
          </div>
        </div>
        <button name="action" value="tomarHora">Tomar Hora</button>
       </tr>
       
        {{/each}}  
       </form> 
    </tbody>
  </table>
</div>