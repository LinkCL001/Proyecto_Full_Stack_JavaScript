<div class="py-4">
    <h2>Solicitud de Hora Imagenologia</h2>
    <hr class="w-50" />

<div class="py-4">
  <h2>Pedir Examenes</h2>
  <hr class="w-50" />
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">nro Examen</th>
        <th scope="col">id Examen</th>
        <th scope="col">Codigo Exámen</th>
        <th scope="col">Nombre Exámen</th>
      </tr>
    </thead>
  <input name="id_examen" type="text">  
  <input name="id_hora" type="text">    
    <tbody>      
      {{#each examenes}}
      <form method="post" action="/pedir-examenes" enctype="multipart/form-data">
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.fecha}}</td>
          <td>{{this.activa}}</td> 
          <td>{{this.codigo}}</td>
          <td>{{this.nombre_examen}}</td>
          <td>{{this.nombre}}</td>
        </tr> 
      {{/each}} 
              <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-12">
            <label for="orden_medica">Orden Medica</label>
            <input type="file" name="orden_medica" id="foto" />
            <button name="action" value="tomarHora">Tomar Hora</button>  
          </div>
        </div>
       <td><button type="submit" class="btn btn-info mb-3" name="action" value="tomarExamen">Seleccionar Examenes</button></td>
       </form> 
    </tbody>
  </table>
</div>

 