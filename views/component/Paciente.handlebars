<h1>Imagenologia</h1>

{{#if success}}
{{success}}
{{/if}}
<div class="py-4">
  <h2>Datos del perfil</h2>
  <hr class="w-50" />
  {{#each pacientes}}
    <form
      method="POST"
      action="/pacientes/{{this.rut}}"
      enctype="multipart/form-data"
      onsubmit="return confirm('¿Esta seguro de aplicar esta acción al usuario?')"
    >
    <div class="form-group row w-50 m-auto">
        <div class="form-group col-12 col-sm-6">
          <label>Rut</label>
          <input
            name="rut"
            class="form-control m-auto"
            disabled
            value={{this.rut}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Email</label>
          <input
            name="email"
            class="form-control m-auto"
            value={{this.email}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Nombres</label>
          <input
            class="form-control m-auto"
            name="nombres"
            value={{this.nombres}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Primer Apellido</label>
          <input
            name="primer_apellido"
            class="form-control m-auto"
            value={{this.primer_apellido}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Segundo Apellido</label>
          <input
            name="segundo_apellido"
            class="form-control m-auto"
            disabled
            value={{this.segundo_apellido}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Password</label>
          <input
            name="password"
            type="password"
            class="form-control m-auto"
            value={{this.password}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Repita la password</label>
          <input
            type="password"
            class="form-control m-auto"
            value={{this.password}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Sexo</label>
          <input
            name="sexo"
            class="form-control m-auto"
            value={{this.sexo}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Fecha De Nacimiento</label>
          <input
            name="fecha_naciminto"
            class="form-control m-auto"
            value={{this.fecha_nacimiento}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Direccion</label>
          <input
            name="direccion"
            class="form-control m-auto"
            value={{this.direccion}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Comuna</label>
          <input
            name="comuna"
            class="form-control m-auto"
            value={{this.comuna}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Telefono</label>
          <input
            name="telefono"
            class="form-control m-auto"
            value={{this.telefono}}
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Prevision</label>
          <input
            name="prevision"
            class="form-control m-auto"
            value={{this.prevision}}
          />
        </div>
      </div>
      <div class="mb-1">
        <button
          name="action"
          type="submit"
          class="btn btn-secondary"
          value="editar"
        >Actualizar</button>
      </div>

    </form>
  {{/each}}
</div>