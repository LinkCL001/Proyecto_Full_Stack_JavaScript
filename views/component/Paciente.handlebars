<div class="py-4 container">
  <h2>Datos del perfil</h2>
  <hr class="w-50" />
  {{#each usuarios}}
  <form method="POST" action="/paciente-update/{{this.id}}" enctype="multipart/form-data"
    onsubmit="return confirm('¿Esta seguro de realizar esta acción al usuario?')">
    <div class="mb-1">
      <button name="action" type="submit" class="btn btn-secondary" value="editar">Actualizar</button>
    </div>
    <div class="mb-1">
      <button name="action" type="submit" class="btn btn-danger" value="eliminar">Eliminar cuenta</button>
    </div>
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Rut</label>
        <input name="rut" class="form-control m-auto" value="{{this.rut}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input name="email" class="form-control m-auto" value="{{this.email}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombres</label>
        <input type="text" class="form-control m-auto" name="nombres" value="{{this.nombres}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Primer Apellido</label>
        <input type="text" name="primer_apellido" class="form-control m-auto" value="{{this.primer_apellido}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Segundo Apellido</label>
        <input type="text" name="segundo_apellido" class="form-control m-auto" value="{{this.segundo_apellido}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input name="password" type="password" class="form-control m-auto" value="{{this.password}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input type="password" class="form-control m-auto" value="{{this.password}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Sexo</label>
        <input type="text" name="sexo" class="form-control m-auto" value="{{this.sexo}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Fecha De Nacimiento</label>
        <input type="date" name="fecha_nacimiento" class="form-control m-auto" value="{{this.fecha_nacimiento}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Edad</label>
        <input type="text" name="edad" class="form-control m-auto" value="{{this.edad}}" />
      </div>

      <div class="form-group col-12 col-sm-6">
        <label>Direccion</label>
        <input type="text" name="direccion" class="form-control m-auto" value="{{this.direccion}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Comuna</label>
        <input type="text" name="comuna" class="form-control m-auto" value="{{this.comuna}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Telefono</label>
        <input type="text" name="telefono" class="form-control m-auto" value="{{this.telefono}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Prevision</label>
        <input type="text" name="prevision" class="form-control m-auto" value="{{this.prevision}}" />
      </div>
    </div>

  </form>
  {{/each}}
  <a class="btn btn-primary btn-lg" href="/pedir-hora" role="button">Pedir Hora</a>
</div>